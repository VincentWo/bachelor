\[\begin{tikzcd}
	{\delta^\ell(a)} & 0 \\
	a & c & 0
	\arrow["{\alpha^{\ell + 1}}", from=1-1, to=1-2]
	\arrow["{\delta^\ell}", from=2-1, to=1-1]
	\arrow["{\alpha^\ell}"', from=2-1, to=2-2]
	\arrow["{\mathrm{d}_v^{0, \ell}}"', from=2-2, to=1-2]
